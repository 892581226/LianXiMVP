<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".data.forgetPassword.OverSetPasswordFragment">

    <ImageView
        android:id="@+id/line1"
        style="@style/JianDao.LineHorizontal"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="42dp" />
    <ImageView
        android:id="@+id/line2"
        style="@style/JianDao.LineHorizontal"
        android:layout_marginTop="55dp"
        app:layout_constraintTop_toBottomOf="@+id/line1"
        tools:layout_editor_absoluteX="42dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/auth_forget_edt_over_password"
        style="@style/JianDao.AutoEditText"
        android:layout_width="170dp"
        android:layout_height="18dp"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="@+id/line1"
        app:layout_constraintStart_toStartOf="@+id/line1"
        android:hint="@string/over_set_new_password" />

    <EditText
        android:id="@+id/auth_ver_forget_edt_over_password"
        style="@style/JianDao.AutoEditText"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:hint="@string/over_set_qu_password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/line2"
        app:layout_constraintEnd_toStartOf="@+id/auth_register_tv_get_verification_code"
        app:layout_constraintStart_toStartOf="@+id/line2" />


    <Button
        android:id="@+id/auth_forget_over_btn_next_step"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="49dp"
        android:background="@drawable/ic_button_selector"
        android:enabled="false"
        android:text="@string/over_set_password"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/line2"
        app:layout_constraintStart_toStartOf="@+id/line2"
        app:layout_constraintTop_toBottomOf="@+id/line2" />

</androidx.constraintlayout.widget.ConstraintLayout>