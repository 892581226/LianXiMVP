<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

      <com.example.mylibrarymvp.widget.MatchScrollParentCLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      <include layout="@layout/layout_auth_common" />

    <ImageView
        android:id="@+id/line1"
        style="@style/JianDao.LineHorizontal"
        android:layout_marginTop="218dp"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.mylibrarymvp.widget.EditTogglePasswordButton
        android:id="@+id/auth_register_set_iv_toggle_confirm_psd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_mvp_eyes_open"
        app:layout_constraintEnd_toStartOf="@+id/auth_register_iv_clean"
        app:layout_constraintTop_toTopOf="@+id/auth_register_iv_clean" />

    <EditText
        android:id="@+id/auth_register_edt_pwd"
        style="@style/JianDao.AutoEditText"
        android:layout_width="179dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:maxLength="11"
        app:layout_constraintBottom_toTopOf="@+id/line1"
        app:layout_constraintEnd_toStartOf="@+id/auth_register_iv_clean"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/line1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        android:hint="@string/password" />

    <com.example.mylibrarymvp.widget.EditCleanButton
        android:id="@+id/auth_register_iv_clean"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/ic_edit_clean"
        app:layout_constraintBottom_toTopOf="@+id/line1"
        app:layout_constraintEnd_toEndOf="parent" />


    <ImageView
        android:id="@+id/line2"
        style="@style/JianDao.LineHorizontal"
        android:layout_marginTop="55dp"
        app:layout_constraintTop_toBottomOf="@+id/line1"
        tools:layout_editor_absoluteX="42dp" />

    <EditText
        android:id="@+id/auth_register_edt_wpsd"
        style="@style/JianDao.AutoEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="4dp"
        android:hint="@string/chongfupsw"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/line2"
        app:layout_constraintEnd_toStartOf="@+id/auth_register_tv_get_verification_code"
        app:layout_constraintStart_toStartOf="@+id/line2" />
    <TextView
        android:id="@+id/auth_register_set_tv_user_agreement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="15dp"
        android:text="TextView"
        android:textColor="@color/gray_9"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/line2"
        app:layout_constraintTop_toBottomOf="@+id/line2" />

    <Button
        android:id="@+id/auth_register_btn_next_step8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="49dp"
        android:background="@drawable/ic_button_selector"
        android:enabled="false"
        android:text="@string/lijiregister"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/line2"
        app:layout_constraintStart_toStartOf="@+id/line2"
        app:layout_constraintTop_toBottomOf="@+id/line2" />

    <TextView
        android:id="@+id/auth_register_tv_code_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="14dp"
        android:text="@string/text_auth_code_login"
        android:textColor="@color/gray_9B9C9E"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/auth_register_btn_next_step8"
        app:layout_constraintTop_toBottomOf="@+id/auth_register_btn_next_step8" />

    <TextView
        android:id="@+id/auth_register_tv_psd_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:text="@string/text_auth_tv_psd_login"
        android:textColor="@color/gray_9B9C9E"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="@+id/auth_register_btn_next_step8"
        app:layout_constraintTop_toTopOf="@+id/auth_register_tv_code_login" />

    <ImageView
        android:id="@+id/auth_iv_anchor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/auth_register_tv_code_login"
        app:layout_constraintStart_toEndOf="@+id/auth_register_tv_code_login" />


      </com.example.mylibrarymvp.widget.MatchScrollParentCLayout>


</ScrollView>
